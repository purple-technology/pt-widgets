.pt-widget-page
    position relative
    width 100%
    height 100%

    .widget
        &--numbers
            .row
                display flex

                strong, em
                    font-weight normal
                    font-variant normal
                
                

                &.small
                    font-size 1rem

                    .cell
                        flex 1
                        margin 0 1rem

                    strong
                        display inline-block
                        opacity .8
                        margin-right: 1rem;
                        
                    em
                        span
                            font-size 80%
                            opacity .7

                &.big
                    .cell
                        flex 1
                        margin 1rem

                    strong, em
                        display block
                    
                    strong
                        opacity .8
                        font-size 1.2rem
                        line-height 1.5rem
                    em
                        span
                            font-size 80%
                            opacity .7

            margin 0
            font-size 16px
            line-height 16px
            color #522974
            font-weight normal

    
    .chartdiv
        height 400px
